{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react", "react-hooks", "@typescript-eslint", "prettier"],
    "settings": {
        "import/resolver": {
            "typescript": {}
        },
        "react": {
			"version": "18.x"
		}
    } ,
    "rules": {
        "linebreak-style": "off",
        "react/react-in-jsx-scope": "off",
		// Configure prettier
		"prettier/prettier": [
			"error",
			{
				"endOfLine": "auto",
				"semi": true,
				"tabWidth": 2,
				"printWidth": 100,
				"singleQuote": true,
				"trailingComma": "all",
				"bracketSpacing": true,
                "jsxSingleQuote": true
			}
			
		],
		// Disallow the `any` type.
		"@typescript-eslint/no-explicit-any": "warn",
		"@typescript-eslint/ban-types": [
			"error",
			{
				"extendDefaults": true,
				"types": {
					"{}": false
				}
			}
		],
		"object-shorthand": "error",
		"no-console": "warn"
    } 
}
